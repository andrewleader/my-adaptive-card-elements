{
    "schema": {
        "properties": {
            "name": {
                "type": "string",
                "description": "The full name of the person.",
                "examples": [ "Andrew Leader" ]
            },
            "picture": {
                "type": "string",
                "description": "URL to a picture of the person."
            }
        }
    },
    "element": {
        "type": "Container",
        "items": [
            {
                "type": "TextBlock",
                "text": "{name}"
            },
            {
                "type": "Image",
                "url": "{picture}"
            }
        ]
    }
}
